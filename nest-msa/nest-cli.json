{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "generateOptions": {
    "spec": false,
    "flat": true
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json",
    "assets": [
      "proto/*.proto"
    ],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json",
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          "proto/*.proto"
        ],
        "watchAssets": true
      }
    },
    "to-do": {
      "type": "application",
      "root": "apps/to-do",
      "entryFile": "src/main",
      "sourceRoot": "./apps/to-do/src",
      "compilerOptions": {
        "tsConfigPath": "apps/to-do/tsconfig.app.json"
      }
    },
    "analytics": {
      "type": "application",
      "root": "apps/analytics",
      "entryFile": "src/main",
      "sourceRoot": "apps/analytics/src",
      "compilerOptions": {
        "tsConfigPath": "apps/analytics/tsconfig.app.json"
      }
    },
    "nest-msa-library": {
      "type": "library",
      "root": "libs/nest-msa-library",
      "entryFile": "index",
      "sourceRoot": "libs/nest-msa-library/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nest-msa-library/tsconfig.lib.json"
      }
    }
  }
}